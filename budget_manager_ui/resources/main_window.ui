<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="BudgetAppWindow" parent="GtkApplicationWindow">
        <property name="width-request">360</property>
        <property name="title" translatable="yes">Budget Manager</property>
        <child type="titlebar">
            <object class="GtkHeaderBar">
                <property name="title-widget">
                    <object class="AdwWindowTitle">
                        <property name="title">Budget tracker</property>
                    </object>
                </property>
                <child type="start">
                    <object class="GtkButton" id="add_transaction_details">
                        <property name="icon-name">list-add-symbolic</property>
                        <property name="tooltip-text" translatable="yes">New Transaction
                        </property>
                        <property name="action-name">win.new-transaction</property>
                    </object>
                </child>
            </object>
        </child>
        <property name="default_width">650</property>
        <property name="default_height">550</property>
        <property name="child">
            <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="hexpand">True</property>
                <property name="width-request">350</property>
                <child>
                    <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="spacing">12</property>
                        <child>
                            <object class="SummaryTable" id="summary_table"/>
                        </child>
                        <child>
                            <object class="GtkScrolledWindow">
                                <property name="vexpand">True</property>
                                <property name="min-content-height">360</property>
                                <property name="child">
                                    <object class="GtkListBox" id="transactions_list">
                                        <style>
                                            <class name="boxed-list"/>
                                        </style>
                                    </object>
                                </property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </property>
    </template>
</interface>
