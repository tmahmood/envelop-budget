<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="CategoryRow" parent="AdwActionRow" >
        <property name="layout-manager">
            <object class="GtkBinLayout"/>
        </property>
        <property name="activatable_widget">category_id_label</property>
        <child type="prefix">
            <object class="GtkButton" id="category_id_label">
                <property name="margin-top">12</property>
                <property name="margin-bottom">12</property>
                <style>
                    <class name="opaque" />
                    <class name="circular" />
                </style>
            </object>
        </child>
        <child>
            <object class="GtkLabel" id="name_label">
                <property name="hexpand">True</property>
                <property name="xalign">0</property>
                <property name="ellipsize">none</property>
                <property name="lines">0</property>
                <property name="wrap">True</property>
                <property name="wrap-mode">word-char</property>
                <property name="use-markup">True</property>
            </object>
        </child>
        <child type="suffix">
            <object class="GtkLabel" id="allocated_label">
                <property name="label">0000.0000</property>
                <property name="halign">GTK_ALIGN_END</property>
                <style>
                    <class name="caption-heading"/>
                </style>
            </object>
        </child>
    </template>
</interface>

