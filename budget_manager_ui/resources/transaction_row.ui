<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="TransactionRow" parent="AdwExpanderRow">
        <child type="action">
            <object class="GtkBox">
                <property name="margin-top">8</property>
                <property name="margin-bottom">8</property>
                <child>
                    <object class="GtkLabel" id="data_action">
                        <style>
                            <class name="subtitle"/>
                        </style>
                    </object>
                </child>
                <child>
                    <object class="GtkBox">
                        <style>
                            <class name="toolbar"/>
                        </style>
                        <child>
                            <object class="GtkButton" id="btn_edit_transaction">
                                <signal name="clicked" handler="handle_edit_button_clicked"
                                        swapped="True"/>
                                <property name="icon-name">edit-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Edit Transaction</property>
                                <style>
                                    <class name="circular"/>
                                </style>
                            </object>
                        </child>
                        <child>
                            <object class="GtkButton" id="btn_delete_transaction">
                                <property name="icon-name">user-trash-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Delete Transaction</property>
                                <style>
                                    <class name="circular"/>
                                    <class name="error"/>
                                </style>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
        <child type="prefix">
            <object class="GtkBox">
                <property name="spacing">10</property>
                <child>
                    <object class="GtkImage" id="transaction_type"/>
                </child>
                <child>
                    <object class="GtkButton" id="transaction_id_btn">
                        <property name="margin-top">14</property>
                        <property name="margin-bottom">14</property>
                        <style>
                            <class name="flat"/>
                            <class name="circular"/>
                        </style>
                    </object>
                </child>
            </object>
        </child>
        <child>
            <object class="AdwActionRow" id="data_inside_row">
                <child type="prefix">
                    <object class="GtkLabel" id="data_inside_row_prefix">
                        <style>
                            <class name="subtitle"/>
                        </style>
                    </object>
                </child>
                <child>
                    <object class="GtkLabel" id="data_inside_row_label">
                        <property name="halign">end</property>
                        <style>
                            <class name="subtitle"/>
                        </style>
                    </object>
                </child>
                <child type="suffix">
                    <object class="GtkLabel" id="data_inside_row_suffix">
                        <style>
                            <class name="subtitle"/>
                        </style>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>

